<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Convertisseur XML - JSON" />

    <HBox spacing="10.0" VBox.vgrow="ALWAYS">
        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
            <Label text="Entrée (Collez votre code ici)" />
            <TextArea fx:id="inputArea" prefHeight="700.0" wrapText="true" />
        </VBox>
        
        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
            <Label text="Sortie (Résultat)" />
            <TextArea fx:id="outputArea" editable="false" prefHeight="700.0" wrapText="true" />
        </VBox>
    </HBox>

    <HBox alignment="CENTER" spacing="20.0">
        <Button onAction="#convertXmlToJson" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="XML vers JSON -&gt;" />
        <Button onAction="#convertJsonToXml" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="&lt;- JSON vers XML" />
    </HBox>
    
</VBox>